topicprefix = /topic/
collectives = <%= collective %>,<%= arr = subcollectives.split(/,/); arr[ rand(arr.size) ] %>
main_collective = <%= collective %>
libdir = <%= instance_home %>/plugins
logfile = <%= BASEDIR %>/logs/<%= identity %>-server.log
loglevel = debug
daemonize = 1
identity = <%= identity %>

# Plugins
securityprovider = none

direct_addressing = yes
direct_addressing_threshold = 5

connector = activemq
plugin.activemq.pool.size = 1
plugin.activemq.pool.1.host = <%= stompserver %>
plugin.activemq.pool.1.port = <%= stompport %>
plugin.activemq.pool.1.user = <%= stompuser %>
plugin.activemq.pool.1.password = <%= stomppass %>
plugin.activemq.pool.1.ssl = <%= stompssl == "y" ? "true" : "false" %>

factsource = yaml
plugin.yaml = <%= instance_home %>/etc/facts.yaml

classesfile = <%= instance_home %>/etc/classes.txt
